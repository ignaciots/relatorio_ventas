<h1>Ventas</h1>

<table>
  <thead>
    <tr>
      <th>Fecha de ingreso de venta</th>
      <th>Cantidad de boletas emitidas</th>
      <th>Suma total de boletas emitidas</th>
      <th>Cantidad de facturas emitidas</th>
      <th>Suma total de facturas emitidas</th>
      <th>Nombre de Local</th>
      <th>NÃºmero de Local</th>
      <th>Centro Comercial</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.sales_date %></td>
        <td><%= sale.number_of_bills %></td>
        <td><%= sale.bill_sale_amount %></td>
        <td><%= sale.number_of_invoices %></td>
        <td><%= sale.invoice_sale_amount %></td>
        <td><%= sale.store.name %></td>
        <td><%= sale.store.number %></td>
        <td><%= sale.store.property.name %></td>
        <td><%= sale.user.name %></td>
        <td><%= link_to 'Mostrar', sale %></td>
        <td>
          <% if can? :edit, sale %>
            <%= link_to 'Editar', edit_sale_path(sale) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, sale %>
            <%= link_to 'Eliminar', sale, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Sale %>
  <%= link_to 'Ingresar Venta', new_sale_path %>
<% end %>
