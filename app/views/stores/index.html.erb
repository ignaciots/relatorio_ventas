<h1>Locales</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Property</th>
      <th>Number</th>
      <th>Floor</th>
      <th>Category</th>
      <th>Telephone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.property.name %></td>
        <td><%= store.number %></td>
        <td><%= store.floor %></td>
        <td><%= store.category.name %></td>
        <td><%= store.telephone %></td>
        <td><%= store.email %></td>
        <% if can? :show, Store %>
          <td><%= link_to 'Show', store %></td>
        <% end %>
        <% if can? :edit, Store %>
          <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <% end %>
        <% if can? :destroy, Store %>
          <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Store %>
  <%= link_to 'New Store', new_store_path %>
<% end %>
