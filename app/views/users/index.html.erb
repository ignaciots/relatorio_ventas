<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo Electrónico</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <% if can? :show, User %>
          <td><%= link_to 'Mostrar', user %></td>
        <% end %>
        <% if can? :edit, User %>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <% end %>
        <% if can? :destroy, User %>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, User %>
  <%= link_to 'Crear Usuario', new_user_path %>
<% end %>
