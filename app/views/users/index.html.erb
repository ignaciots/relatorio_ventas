<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Store</th>
      <th>Store Number</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><% if user.has_store? %> <%= user.store.name %> <% end %></td>
        <td><% if user.has_store? %> <%= user.store.number %> <% end %></td>
        <td><% if user.has_store? %> <%= user.store.property.name %> <% end %></td>
        <% if can? :show, User %>
          <td><%= link_to 'Show', user %></td>
        <% end %>
        <% if can? :edit, User %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <% if can? :destroy, User %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, User %>
  <%= link_to 'New User', new_user_path %>
<% end %>
